<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/cardGoals"
android:layout_width="match_parent"
android:layout_height="175dp"
android:layout_margin="8dp"
    android:elevation="2dp">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/goalsCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Goal Progress"
            android:textColor="#222"
            android:textStyle="bold"
            android:textSize="22sp" />

        <RelativeLayout
            android:id="@+id/r"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/goalsCardTitle">

            <ProgressBar
                android:id="@+id/goalBar1"
                style="@style/CustomProgressBar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:progress="20"
                android:layout_centerHorizontal="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_below="@+id/goalBar1">

                <TextView
                    android:id="@+id/goal1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="User Goal 1"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20sp" />

                <TextView
                    android:id="@+id/goalPercent1"
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:padding="8dp"
                    android:text="--%"
                    android:textColor="#666"
                    android:textSize="14sp" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/r"
            android:layout_marginTop="10dp">

        <ProgressBar
            android:id="@+id/goalBar2"
            style="@style/CustomProgressBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:progress="75"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_below="@+id/goalBar2">

            <TextView
                android:id="@+id/goal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="User Goal 2"
                android:textColor="#666"
                android:textSize="14sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20sp" />


            <TextView
                android:id="@+id/goalPercent2"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20sp"
                android:padding="8dp"
                android:text="--%"
                android:textColor="#666"
                android:textSize="14sp" />

        </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>